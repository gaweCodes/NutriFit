<a class="link-@Color.ToString().ToLower() link-underline-opacity-25 link-underline-opacity-100-hover">@Text</a>

@code {
    [Parameter]
    public required string Link { get; init; }
    [Parameter]
    public required string Text { get; init; }
    [Parameter]
    public ColorType Color { get; init; } = ColorType.Primary;
}