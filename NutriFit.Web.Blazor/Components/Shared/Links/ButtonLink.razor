<NavLink href="@Link" class="@GetButtonClass()">@Text</NavLink>

@code {
    [Parameter]
    public required string Link { get; init; }
    [Parameter]
    public required string Text { get; init; }
    [Parameter]
    public required ColorType Color { get; init; }

    private string GetButtonClass() => Color switch
    {
        ColorType.Primary => "btn btn-primary",
        ColorType.Secondary => "btn btn-secondary",
        _ => "btn btn-black"
    };
}
