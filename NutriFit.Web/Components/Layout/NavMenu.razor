<MudAppBar Color="Color.Primary">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(() => DrawerToggle())" @rendermode="InteractiveServer" />
    <MudText Typo="Typo.h3">NutriFit</MudText>
</MudAppBar>
<MudDrawer @bind-Open="@DrawerOpen" Color="Color.Dark">
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All">Dashboard</MudNavLink>
        <MudNavLink Href="/counter" Match="NavLinkMatch.Prefix">Counter</MudNavLink>
        <MudNavLink Href="/weather" Match="NavLinkMatch.Prefix">Wetter</MudNavLink>
    </MudNavMenu>
</MudDrawer>
@code {
    public bool DrawerOpen = true;

    public void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }
}