    <NavMenu></NavMenu>>
</MudLayout>
<MudMainContent>
    <MudContainer MaxWidth="MaxWidth.Medium">
        @Body
</MudContainer>
</MudMainContent>

@code{

    private readonly MudTheme _nutriFitTheme = new()
    {
        PaletteLight = new PaletteLight
        {
                Primary = "#28a745",
                PrimaryContrastText = "#FFFFFF",
                Secondary = "#6c757d",
                Success = "#6fbf73",
                Warning = "#ff9800",
                Info = "#17a2b8",
                Error = "#dc3545",
                Dark = "#343a40"
        },
